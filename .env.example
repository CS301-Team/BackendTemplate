# Environment Variables Configuration File
# Copy this file to .env.local or set these variables in your deployment environment

# ==============================================
# Spring Profile Configuration
# ==============================================
SPRING_PROFILES_ACTIVE=dev

# ==============================================
# Application Configuration
# ==============================================
APP_NAME=CS301 Backend Template
APP_VERSION=1.0.0
APP_DESCRIPTION=A standardized Spring Boot backend service template for rapid development
APP_TIMEZONE=America/New_York

# ==============================================
# Server Configuration
# ==============================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# Development specific
DEV_SERVER_PORT=8080
DEV_SERVER_CONTEXT_PATH=/api

# Staging specific
STAGING_SERVER_PORT=8080
STAGING_SERVER_CONTEXT_PATH=/api

# Production specific
PROD_SERVER_PORT=8080
PROD_SERVER_CONTEXT_PATH=/api
PROD_TOMCAT_MAX_THREADS=200
PROD_TOMCAT_MIN_SPARE_THREADS=10

# ==============================================
# Database Configuration (uncomment when using JPA)
# ==============================================
# Development Database (H2)
# DEV_DB_URL=jdbc:h2:mem:devdb
# DEV_DB_DRIVER=org.h2.Driver
# DEV_DB_USERNAME=sa
# DEV_DB_PASSWORD=
# H2_CONSOLE_ENABLED=true
# H2_CONSOLE_PATH=/h2-console
# DEV_JPA_DDL_AUTO=create-drop
# DEV_JPA_SHOW_SQL=true

# Staging Database (PostgreSQL)
# STAGING_DB_URL=jdbc:postgresql://localhost:5432/backend_template_staging
# STAGING_DB_DRIVER=org.postgresql.Driver
# STAGING_DB_USERNAME=staging_user
# STAGING_DB_PASSWORD=staging_password
# STAGING_JPA_DDL_AUTO=validate
# STAGING_JPA_SHOW_SQL=false

# Production Database (PostgreSQL)
# PROD_DB_URL=jdbc:postgresql://prod-db-server:5432/backend_template
# PROD_DB_DRIVER=org.postgresql.Driver
# PROD_DB_USERNAME=prod_user
# PROD_DB_PASSWORD=super_secure_password
# PROD_DB_POOL_SIZE=20
# PROD_DB_MIN_IDLE=5
# PROD_DB_CONNECTION_TIMEOUT=30000
# PROD_DB_IDLE_TIMEOUT=600000
# PROD_DB_MAX_LIFETIME=1800000
# PROD_JPA_DDL_AUTO=validate
# PROD_JPA_SHOW_SQL=false

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN
LOG_LEVEL_HIBERNATE=WARN

# Development Logging
DEV_LOG_LEVEL_APP=DEBUG
DEV_LOG_LEVEL_WEB=DEBUG
DEV_LOG_LEVEL_SECURITY=DEBUG
DEV_LOG_LEVEL_SQL=DEBUG
DEV_LOG_LEVEL_SQL_PARAMS=TRACE
DEV_LOG_FILE=logs/backend-template-dev.log

# Staging Logging
STAGING_LOG_LEVEL_APP=INFO
STAGING_LOG_LEVEL_SPRING=WARN
STAGING_LOG_LEVEL_SECURITY=INFO
STAGING_LOG_LEVEL_ROOT=WARN
STAGING_LOG_FILE=/var/log/backend-template/staging.log

# Production Logging
PROD_LOG_LEVEL_APP=INFO
PROD_LOG_LEVEL_SPRING=WARN
PROD_LOG_LEVEL_HIBERNATE=WARN
PROD_LOG_LEVEL_SECURITY=WARN
PROD_LOG_LEVEL_ROOT=WARN
PROD_LOG_FILE=/var/log/backend-template/application.log
PROD_LOG_MAX_FILE_SIZE=10MB
PROD_LOG_MAX_HISTORY=30

# ==============================================
# Management/Actuator Configuration
# ==============================================
MANAGEMENT_ENDPOINTS=health,info,metrics
HEALTH_SHOW_DETAILS=when-authorized

# Development Management
DEV_MANAGEMENT_ENDPOINTS=health,info,metrics,env,configprops,beans,mappings

# Staging Management
STAGING_MANAGEMENT_ENDPOINTS=health,info,metrics,env
STAGING_MANAGEMENT_BASE_PATH=/management
STAGING_HEALTH_SHOW_DETAILS=when-authorized

# Production Management
PROD_MANAGEMENT_ENDPOINTS=health,info,metrics
PROD_MANAGEMENT_BASE_PATH=/management
PROD_HEALTH_SHOW_DETAILS=never

# ==============================================
# OpenAPI/Swagger Configuration
# ==============================================
SWAGGER_ENABLED=true

# Development Swagger
DEV_SWAGGER_SHOW_ACTUATOR=true

# Staging Swagger
STAGING_SWAGGER_ENABLED=true
STAGING_API_DOCS_ENABLED=true

# Production Swagger (disabled for security)
PROD_SWAGGER_ENABLED=false
PROD_API_DOCS_ENABLED=false

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Development CORS
DEV_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
DEV_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
DEV_CORS_ALLOWED_HEADERS=*
DEV_CORS_ALLOW_CREDENTIALS=true

# Staging CORS
STAGING_CORS_ALLOWED_ORIGINS=https://staging.example.com
STAGING_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
STAGING_CORS_ALLOWED_HEADERS=Content-Type,Authorization
STAGING_CORS_ALLOW_CREDENTIALS=true

# Production CORS (MUST be configured for your domain)
PROD_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
PROD_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
PROD_CORS_ALLOWED_HEADERS=Content-Type,Authorization
PROD_CORS_ALLOW_CREDENTIALS=true

# ==============================================
# Security Configuration
# ==============================================
# Development Security (insecure - for development only)
DEV_DEBUG_MODE=true
DEV_JWT_SECRET=dev-secret-key-change-in-production
DEV_JWT_EXPIRATION=86400

# Staging Security
STAGING_DEBUG_MODE=false
STAGING_JWT_SECRET=staging-jwt-secret-key-32-chars-min
STAGING_JWT_EXPIRATION=3600

# Production Security (MUST be set securely)
PROD_JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
PROD_JWT_EXPIRATION=3600

# ==============================================
# Cache Configuration
# ==============================================
# Development Cache
DEV_CACHE_ENABLED=false
DEV_CACHE_TTL=300

# Staging Cache
STAGING_CACHE_ENABLED=true
STAGING_CACHE_TTL=1800

# Production Cache
PROD_CACHE_ENABLED=true
PROD_CACHE_TTL=3600

# ==============================================
# Rate Limiting Configuration
# ==============================================
# Production Rate Limiting
PROD_RATE_LIMITING_ENABLED=true
PROD_RATE_LIMIT_RPM=100

# ==============================================
# Monitoring Configuration
# ==============================================
# Production Monitoring
PROD_METRICS_ENABLED=true
PROD_TRACING_ENABLED=true
